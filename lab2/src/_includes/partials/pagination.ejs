<!-- Pagination partial, make sure to pass pagination data, collection data, and show title bool. Show titles is for the buttons for each page. False  or null will result in page numbers being shown -->
<nav aria-labelledby="my-pagination">
  <ul class="pagination">
    <%# Previous page button %>
    <% if (pagination.href.previous) { %>
      <li class="page-item">
        <a class="page-link" href="<%= baseUrl %><%= pagination.href.previous %>">Previous</a>
      </li>
    <% } else { %>
      <li class="page-item disabled">
        <a class="page-link">Previous</a>
      </li>
    <% } %>

    
    <%# Page number buttons %>
    <% pagination.pages.forEach((pageEntry, index) => { 
      
      %>
      <li class="page-item <%= pagination.pageNumber === index ? 'active' : '' %>">
        <a class="page-link" href="<%= baseUrl %><%= pagination.links[index] %>"
           <% if (pagination.pageNumber === index) { %> aria-current="page" <% } %>>
          <% if (showTitles && collection && collection[index]) { %>
            <%= collection[index].page_control %> <!-- Show title if available and flag is true -->
          <% } else { %>
            <%= index + 1 %> <!-- Otherwise, show page number -->
          <% } %>
        </a>
      </li>
    <% }); %>
    

    <%# Next page button %>
    <% if (pagination.href.next) { %>
      <li class="page-item">
        <a class="page-link" href="<%= baseUrl %><%= pagination.href.next %>">Next</a>
      </li>
    <% } else { %>
      <li class="page-item disabled">
        <a class="page-link">Next</a>
      </li>
    <% } %>
  </ul>
</nav>
