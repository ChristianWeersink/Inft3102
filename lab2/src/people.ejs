---
pagination:
  data: datoPeople
  size: 10
layout: layouts/default.ejs
permalink: "people/<%= pagination.pageNumber +1 %>.html"
title: People
---

<div class="col-md-6">
  <h1>People</h1>

  <ol id="peopleList">
    <% pagination.items.forEach((people) => { %>
    <li>
      <%= people.name %>'s Favourite colour is
      <span style="background-color: <%= people.colour %>"
        ><%= people.colour%></span
      >
      They live in <%= people.city %>
    </li>
    <% }); %>
  </ol>
</div>

<%- include('./_includes/partials/pagination', { pagination: pagination, showTitles: false }) %>
